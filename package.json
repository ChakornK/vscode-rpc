{
  "name": "vsc-discord-rpc",
  "displayName": "Discord RPC",
  "description": "A simple no-config Discord RPC extension",
  "version": "0.0.3",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/chakornk/vscode-rpc"
  },
  "publisher": "ChakornK",
  "license": "MIT",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.107.0"
  },
  "keywords": [
    "discord",
    "rich",
    "presence",
    "rpc",
    "status",
    "activity"
  ],
  "categories": [
    "Visualization",
    "Other"
  ],
  "extensionKind": [
    "ui"
  ],
  "galleryBanner": {
    "color": "#5865F2",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "build": "yarn run check-types && node esbuild.js --production",
    "package": "vsce package --no-yarn",
    "deploy": "vsce publish --no-yarn",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "25.0.3",
    "@types/vscode": "^1.107.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "esbuild-plugin-yaml": "^0.0.1",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "packageManager": "yarn@4.12.0"
}
